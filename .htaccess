# Activar el motor de reescritura
RewriteEngine On

# 1. Redirección de HTTP a HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Si el archivo o directorio real existe, no aplicar reescritura
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# 3. Redirigir URLs limpias a archivos .php (solo si existen)
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

# 4. Reglas específicas de rutas limpias (opcional, si quieres nombres distintos)
RewriteRule ^login$ login.php [L]
RewriteRule ^index$ index.php [L]
RewriteRule ^index_a$ assets/code/alumnos/temas/index_alumno.php [L]
RewriteRule ^index_p$ assets/code/profesor/index_profesor.php [L]
