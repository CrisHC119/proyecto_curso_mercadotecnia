# 1. Activar motor de reescritura
RewriteEngine On

# 2. Redirigir HTTP a HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3. Reglas personalizadas primero (se procesan antes que la regla gen√©rica)
RewriteRule ^login$ login.php [L]
RewriteRule ^index$ index.php [L]
RewriteRule ^index_a$ assets/code/alumnos/temas/index_alumno.php [L]
RewriteRule ^index_p$ assets/code/profesor/index_profesor.php [L]

# 4. Si archivo o directorio real existe, no hacer nada
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 5. Regla general para ocultar .php
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(.+)$ $1.php [L]
